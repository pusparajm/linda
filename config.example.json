{
    "backend": {
        "type": "Slack",
        "token": "YOUR_API_TOKEN_HERE",
        "channel": "random"
    },
    "commands": [
        {
            "type": "Artist",
            "name": "buddha",
            "description": "Renders ASCII-swastika from input word. Usage: `!buddha <input>`",
            "expression": "(?i)!buddha ([\\p{L}^,.]+)"
        },    
        {
            "type": "Bully",
            "name": "bully",
            "description": "Simple test of Bully command. Usage: `!bully`",
            "expression": "(?i)!(bully)",
            "response": "I'm here!"
        },
        {
            "type": "Postman",
            "name": "football",
            "description": "Returns latest unread article from championat.com. Usage: `!football`",
            "expression": "(?i)!football",
            "url": "http://www.championat.com/xml/rss_football-article.xml"
        },        
        {
            "type": "Proxy",
            "name": "translate",
            "description": "Fetches translation by russian word. Usage: `!translate <input>`",
            "expression": "(?i)!translate ([\\p{L}^,.]+)",
            "url": "http://mymemory.translated.net/api/get?q=$1&langpair=ru|en",
            "params": {
                "translation": "$.responseData.translatedText+"
            },
            "response": "Translation: {{.translation}}"
        },
        {
            "type": "Proxy",
            "name": "weather",
            "description": "Fetches weather by provided location. Usage: `!weather <input>`",
            "expression": "(?i)!weather ([\\p{L}^,.]+)",
            "url": "http://api.openweathermap.org/data/2.5/weather?q=$1&lang=en&units=metric",
            "params": {
                "city": "$.name+",
                "temperature": "$.main.temp+",
                "description": "$.weather[0].description+"
            },
            "response": "Weather at {{.city}}: {{.temperature}} Â°C, {{.description}}"
        },
        {
            "type": "Proxy",
            "name": "wikipedia",
            "description": "Fetches random page from Wikipedia. Usage: `!random`",
            "expression": "(?i)!random",
            "url": "https://en.wikipedia.org/w/api.php?action=query&generator=random&grnnamespace=0&prop=info&inprop=url&format=json",
            "params": {
                "title": "$.query.pages.*.title+",
                "link": "$.query.pages.*.fullurl+"
            },
            "response": "Read more about {{.title}} at {{.link | query_unescape }}"
        }
    ],
    "params": {
        "execution_mode": "first",
        "log_level": "debug",
        "nicknames": {
            "kpashka": "Pasha"
        },
        "salutes": {
            "greeting": "Hey, silly boys!",
            "farewell": "Bye, silly boys!",
            "user_entered": "Nice to meet you, %s!",
            "user_left": "See you later, %s!"
        },
        "shy": false
    }
}